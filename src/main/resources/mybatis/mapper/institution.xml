<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oti.team2.dao.InstitutionDao"> <!-- 식별 이름은 전체 이름을 넣어야됨 -->
	<select id="selectInst" parameterType="string" resultType="int">
		select INST_NM, INST_TELNO, INST_ADDR, 
		from INSTITUTION, MEMBERS
		where MEMBER_ID = #{mid}
	</select>
	<insert id="insertInst" parameterType="string">
		insert into member (mid,mname,mpassword, menabled,mrole,memail)
		values (#{mid}, #{mname}, #{mpassword}, #{menabled}, #{mrole},#{memail})
	</insert>
	<update id="updateInst" parameterType="string">
		insert into member (mid,mname,mpassword, menabled,mrole,memail)
		values (#{mid}, #{mname}, #{mpassword}, #{menabled}, #{mrole},#{memail})
	</update>
</mapper>